@model Category


<div class="d-flex justify-content-center align-items-center">
    <h1 class="text-center display-4"><a style="text-decoration: none" href="/products">Products</a></h1>
    <h1 class="text-center display-4 mx-4">|</h1>
    <h1 class="text-center display-4">Categories</h1>
</div>
<div class="d-flex justify-content-around mt-5">
    <div class="d=flex flex-column justify-content-center align-items-center">
        <h3 class="display-6 mb-5">New Category</h3>
        <form action="add/category" method="post">
        <div class="form-group d-flex justify-content-between align-items-center mb-3">
            <label for="Name" class="me-3">Name</label>
            <input asp-for="Name">
        </div>
            <small><span asp-validation-for="Name" class="text-danger"></span></small>
            <div class="mt-3">
                <input class="btn btn-primary" type="submit" value="Create">
            </div>
        </form>
    </div>
    <div>
        <h3 class="display-6 mb-5">Existing Categories</h3>
        <div>
            @foreach(Category c in @ViewBag.AllCategories)
            {
                <h3><a href="/category/@c.CategoryId">@c.Name</a></h3>
            }
        </div>
    </div>
</div>
