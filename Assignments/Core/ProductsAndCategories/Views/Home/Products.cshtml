@model Product


<div class="d-flex justify-content-center align-items-center">
    <h1 class="text-center display-4">Products</h1>
    <h1 class="text-center display-4 mx-4">|</h1>
    <h1 class="text-center display-4"><a style="text-decoration: none" href="/categories">Categories</a></h1>
</div>
<div class="d-flex justify-content-around mt-5">
    <div class="d=flex flex-column justify-content-center align-items-center">
        <h3 class="display-6 mb-5">New Product</h3>
        <form action="add/product" method="post">
        <div class="form-group d-flex justify-content-between align-items-center mb-3">
            <label for="Name" class="me-3">Name</label>
            <input asp-for="Name">
        </div>
            <small><span asp-validation-for="Name" class="text-danger"></span></small>
        <div class="form-group d-flex justify-content-between align-items-center mb-3">
            <label for="Description" class="me-3">Description</label>
            <textarea asp-for="Description" cols="23" rows="2"></textarea>
        </div>
            <small><span asp-validation-for="Description" class="text-danger"></span></small>
        <div class="form-group d-flex justify-content-between align-items-center mb-3">
            <label for="Price" class="me-3">Price</label>
            <input asp-for="Price">
        </div>
            <small><span asp-validation-for="Price" class="text-danger"></span></small>
            <div class="mt-3">
                <input class="btn btn-primary" type="submit" value="Create">
            </div>
        </form>
    </div>
    <div>
        <h3 class="display-6 mb-5">Existing Products</h3>
        <div>
            @foreach(Product p in @ViewBag.AllProducts)
            {
                <h3><a href="/product/@p.ProductId">@p.Name</a></h3>
            }
        </div>
    </div>
</div>
